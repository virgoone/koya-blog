
<% if(theme.show_dates) { %>
    <h1 class="title"><%- item.title || theme.default_post_title || "Untitled" %></h1>
    <div class="meta">
        <div class="date"><%= item.date.format(config.date_format) %></div>
        <% if(page.comments && theme.comments && theme.comments.valine && theme.comments.valine.enable) { %>
        <div class="post-meta-divider">|</div>
        <div id="<%- url_for(item.path) %>" class="leancloud-visitors" data-flag-title="<%= item.title %>">
            <em class="post-meta-item-text">阅读量: </em>
            <i class="leancloud-visitors-count"></i>
        </div>
        <% } %>
    </div>
<% } else { %>
    <h1><%- item.title || theme.default_post_title || "Untitled" %></h1>
<% } %>

<% if(item.cover_detail || theme.default_cover_detail) { %>
    <span class="image main"><img src="<%- item.cover_detail || theme.default_cover_detail %>" alt="" /></span>
<% } %>

<hr />

<!-- Gallery -->
<% if (item.photos && item.photos.length){ %>
    <%- partial('gallery') %>
<% } %>

<!-- Content -->
<%- item.content %>

<!-- Tags -->
<%- partial('article-tags') %>

<!-- Comments -->
<div>
    <%- partial("_partial/comments.ejs") %>
</div>

